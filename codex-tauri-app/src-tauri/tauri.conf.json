{
  "productName": "Codex Account Manager",
  "version": "0.1.0",
  "identifier": "com.codex.account-manager",
  "build": {
    "beforeDevCommand": "npm run vite",
    "beforeBuildCommand": "vite build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "Codex Account Manager",
        "width": 1000,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
